<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs',{title: movie.title}) %>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="card col-10 mx-auto">
        <div class="card-header text-center text-bg-success">
            <h1><%= movie.title.toUpperCase() %> </h1>
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <div class="d-flex ">
                <div class="col-12 col-md-4">
                    <img class="img-fluid" src="/img/movies/<%= movie.image || "default-image.jpg" %>" alt="">
                </div>
                <div class="col-12 col-md-8">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item fw-bold">GENERO: <%= movie.genre ? movie.genre.name : "Sin especificar" %></li>
                        <li class="list-group-item">
                            <div class="d-flex justify-content-around">
                                <h5 ><b>RATING:</b> <%= movie.rating %></h5>
                                <h5 ><b>PREMIOS:</b> <%= movie.awards %></h5>
                                <h5 ><b>DURACION:</b> <%= movie.length + ' min'%></h5>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <h5 class="fw-bold">Actores :</h5>
                            <ul class="list-group list-group-flush">
                                
                            <% if (movie.actors.length){ %>
                                <% movie.actors.forEach(actor =>{ %>
                                    <li class="list-group-item fs-5 ps-5"> <%= actor.first_name %>, <%= actor.last_name %></li>     
                                <%})%>
                            <%}else{ %>
                                <p>No hay actores vinculados con esta pelicula</p>
                            <%}%>
                            </ul>
                        </li>
                      </ul>
                </div>
               
            </div>
            <div class="col-12 d-flex justify-content-between py-2">
                <a href="/movies"><button class="btn btn-primary mx-2"   type="submit">Volver</button></a>
                <div class="d-flex justify-content-end">
                    <a href="/movies/edit/<%= movie.id %>"><button class="btn btn-success mx-2"   type="submit">Editar</button></a>
                    <a href="/movies/delete/<%= movie.id %>"><button class="btn btn-danger mx-2"   type="submit">Borrar</button></a>
                </div>
            </div>
          </blockquote>
        </div>
      </div>
</body>
</html>